{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "AllowedHosts": "*",
  "Services": {
    "CalculationService": {
      "Url": "http://localhost:5001"
    },
    "VisualizationService": {
      "Url": "http://localhost:5002"
    },
    "AuthService": {
      "Url": "http://localhost:5003"
    },
    "ApiGateway": {
      "Url": "http://localhost:5000"
    }
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:5173",
      "http://localhost:5174"
    ]
  },
  "ApplicationInsights": {
    "ConnectionString": ""
  },
  "ReverseProxy": {
    "Routes": {
      "calculation-route": {
        "ClusterId": "calculation-cluster",
        "Match": {
          "Path": "/api/calculations/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/interstellar-objects/{**catch-all}"
          }
        ]
      },
      "calculation-health-route": {
        "ClusterId": "calculation-cluster",
        "Match": {
          "Path": "/api/calculations/health"
        },
        "Transforms": [
          {
            "PathPattern": "/health"
          }
        ]
      },
      "visualization-route": {
        "ClusterId": "visualization-cluster",
        "Match": {
          "Path": "/api/visualization/{**catch-all}"
        }
      },
      "visualization-health-route": {
        "ClusterId": "visualization-cluster",
        "Match": {
          "Path": "/api/visualization/health"
        },
        "Transforms": [
          {
            "PathPattern": "/health"
          }
        ]
      }
    },
    "Clusters": {
      "calculation-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5001"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:10",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        }
      },
      "visualization-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5002"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:10",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        }
      }
    }
  }
}