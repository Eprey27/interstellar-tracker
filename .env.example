# Environment Variables for Local Development
# Copy this file to .env.local and customize as needed
# NEVER commit .env.local to version control

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=interstellar
POSTGRES_USER=interstellar_user
POSTGRES_PASSWORD=Dev_Password_123!
DATABASE_CONNECTION_STRING=Host=localhost;Port=5432;Database=interstellar;Username=interstellar_user;Password=Dev_Password_123!

# Keycloak Configuration
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=interstellar-tracker
KEYCLOAK_CLIENT_ID=interstellar-api
KEYCLOAK_CLIENT_SECRET=your-client-secret-here
KEYCLOAK_ADMIN_USER=admin
KEYCLOAK_ADMIN_PASSWORD=admin

# SMTP Configuration (MailHog)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_FROM=noreply@interstellar-tracker.local
SMTP_USE_SSL=false

# API Configuration
API_GATEWAY_URL=http://localhost:5000
AUTH_SERVICE_URL=http://localhost:5001
CALCULATION_SERVICE_URL=http://localhost:5002
VISUALIZATION_SERVICE_URL=http://localhost:5003

# Application Settings
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://localhost:5000
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Logging
LOG_LEVEL=Information
SEQ_URL=http://localhost:5341

# Feature Flags
ENABLE_SWAGGER=true
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true

# Azure Configuration (for local development with Azure services)
# Get these values from Terraform outputs after deployment
AZURE_SUBSCRIPTION_ID=9fff6f2c-c722-4906-bb36-19bcd059d6d6
AZURE_TENANT_ID=your-tenant-id-here
AZURE_CLIENT_ID=your-client-id-here
AZURE_CLIENT_SECRET=your-client-secret-here

# Application Insights (leave empty for local development, will use user secrets)
APPLICATIONINSIGHTS__CONNECTIONSTRING=

# Key Vault (optional for local development)
AZURE_KEY_VAULT_NAME=interstellar-dev-kv
AZURE_KEY_VAULT_URI=https://interstellar-dev-kv.vault.azure.net/
